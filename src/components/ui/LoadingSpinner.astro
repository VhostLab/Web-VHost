---
// MEJORA #10: Loading States - Componente de spinner reutilizable
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  color?: string;
}

const { size = 'md', color = '#fc7c04' } = Astro.props;

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-10 h-10',
  lg: 'w-16 h-16'
};
---

<div class={`loading-spinner ${sizeClasses[size]} mx-auto`} style={`border-top-color: ${color};`}></div>
