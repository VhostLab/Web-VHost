---
export interface Caracteristica {
  icon: string;
  title: string;
  description: string;
  iconBorderColor?: string;
  iconBgColor?: string;
}

const caracteristicas: Caracteristica[] = [
  {
    icon: "fas fa-server",
    title: "Hardware Empresarial",
    description: "Rendimiento fluido con hardware profesional.",
    iconBorderColor: "#eebd53",
    iconBgColor: "#4e4022",
  },
  {
    icon: "fas fa-coins",
    title: "Económico",
    description: "Precios asequibles para cualquier presupuesto.",
    iconBorderColor: "#10B981",
    iconBgColor: "#064e3b",
  },
  {
    icon: "fas fa-headset",
    title: "Soporte Gratuito",
    description: "Asistencia inmediata ante cualquier incidencia 24/7.",
    iconBorderColor: "#60A5FA",
    iconBgColor: "#1e3a8a",
  },
  {
    icon: "fas fa-globe",
    title: "Baja Latencia",
    description: "Servidores globales con conexiones optimizadas.",
    iconBorderColor: "#8B5CF6",
    iconBgColor: "#5b21b6",
  },
  {
    icon: "fas fa-clock",
    title: "Activación Instantánea",
    description: "Tu servidor listo para usar tras el pago.",
    iconBorderColor: "#F97316",
    iconBgColor: "#7c2d12",
  },
  {
    icon: "fas fa-shield-alt",
    title: "Protección DDoS",
    description: "Blindaje automático ante ataques sin coste añadido.",
    iconBorderColor: "#984A4A",
    iconBgColor: "#4e2232",
  },
];
---

<section class="py-20 md:py-24 bg-primary">
  <div class="container mx-auto px-4 sm:px-6">
    <h2
      class="text-3xl sm:text-4xl md:text-5xl font-poppins font-bold text-white text-center mb-8"
    >
      ¿Por qué elegirnos?
    </h2>
    <div class="border-t-2 border-secondary w-24 mx-auto mb-12"></div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
      {
        caracteristicas.map((item, index) => (
          <div
            class={`border border-secondary rounded-lg p-6 flex gap-4 items-center bg-[#111] reveal delay-${index < 3 ? (index + 1) * 100 : 300}`}
          >
            {/* Icono centrado */}
            <div
              class="w-12 h-12 flex items-center justify-center border-2 rounded-md text-white shrink-0 transition-all duration-300"
              style={`border-color: ${item.iconBorderColor}; background-color: ${item.iconBgColor};`}
            >
              <i class={`${item.icon} text-lg md:text-xl`} />
            </div>
            {/* Texto */}
            <div>
              <h4 class="text-base sm:text-lg md:text-xl font-semibold text-white">
                {item.title}
              </h4>
              <p class="mt-1 text-muted text-sm md:text-base">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
