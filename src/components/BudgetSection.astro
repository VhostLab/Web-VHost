  },
  {
    type: 'Lapis',
    ram: '8GB RAM',
    img: '/images/tienda/minecraft/plan/Lapis.webp',
    price: '7,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Budget/Lapis-Budget',
    vanilla: '18-35 jugadores',
    plugins: 'Sí',
    pluginsRange: '12-20 jugadores',
    mods: 'Sí',
