  },
  {
    type: 'Gold',
    ram: '4GB RAM',
    img: '/images/tienda/minecraft/plan/Gold.webp',
    price: '3,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Budget/Gold-Budget',
    vanilla: '8-18 jugadores',
    plugins: 'Si lo recomendamos',
    pluginsRange: '5-12 jugadores',
    mods: 'No recomendado',
    modsRange: '',
    both: 'No recomendado',
    bothRange: ''
  },
  {
    type: 'Lapis',
    ram: '8GB RAM',
    img: '/images/tienda/minecraft/plan/Lapis.webp',
    price: '7,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Budget/Lapis-Budget',
    vanilla: '18-35 jugadores',
    plugins: 'Si lo recomendamos',
    pluginsRange: '12-20 jugadores',
    mods: 'Si lo recomendamos',
    modsRange: '2-6 jugadores (modpacks ligeros)',
    both: 'Si lo recomendamos',
    bothRange: '1-3 jugadores (pack ligero y pocos plugins)'
  },
  {
    type: 'Emerald',
    ram: '12GB RAM',
    img: '/images/tienda/minecraft/plan/Emerald.webp',
    price: '11,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Budget/Emerald-Budget',
    vanilla: '30-50 jugadores',
    plugins: 'Si lo recomendamos',
    pluginsRange: '20-35 jugadores',
    mods: 'Si lo recomendamos',
