    vanilla: '1-4 jugadores',
    plugins: 'No recomendado',
    pluginsRange: '',
    mods: 'No recomendado',
    modsRange: '',
    both: 'No recomendado',
    bothRange: ''
  },
  {
    type: 'Iron',
    ram: '2GB RAM',
    img: '/images/tienda/minecraft/plan/Iron.webp',
    price: '1,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Budget/Iron-Budget',
    vanilla: '3-8 jugadores',
    plugins: 'Si lo recomendamos',
    pluginsRange: '2-5 jugadores',
    mods: 'No recomendado',
    modsRange: '',
    both: 'No recomendado',
