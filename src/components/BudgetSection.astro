const featuresList = [
  {
    icon: "fas fa-user-friends mr-2.5",
    text: "<strong>Slots</strong> Ilimitados",
  },
  { icon: "fas fa-hdd mr-3.5", text: "<strong>20 GB</strong> de disco" },
  {
    icon: "fas fa-shield-alt mr-3.5",
    text: "Protección <strong>Anti-DDoS</strong>",
  },
  { icon: "fas fa-microchip mr-3.5", text: "<strong>Intel i5-8500</strong>" },
