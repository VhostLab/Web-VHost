  {
    type: 'Coal',
    ram: '1GB RAM',
    img: '/images/tienda/minecraft/plan/Coal.webp',
    price: '1,50€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Premium/Coal-Premium',
    vanilla: '1-5 jugadores',
    plugins: 'No',
    pluginsRange: 'No recomendado',
    mods: 'No',
    modsRange: 'No recomendado',
    both: 'No',
    bothRange: 'No recomendado'
  },
  {
    type: 'Iron',
    ram: '2GB RAM',
    img: '/images/tienda/minecraft/plan/Iron.webp',
    price: '2,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Premium/Iron-Premium',
    vanilla: '3-10 jugadores',
    plugins: 'Sí',
    pluginsRange: '2-8 jugadores',
    mods: 'No',
    modsRange: 'No recomendado',
    both: 'No',
    bothRange: 'No recomendado'
  },
  {
    type: 'Gold',
    ram: '4GB RAM',
    img: '/images/tienda/minecraft/plan/Gold.webp',
    price: '5,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Premium/Gold-Premium',
    vanilla: '10-24 jugadores',
    plugins: 'Sí',
    pluginsRange: '8-16 jugadores',
    mods: 'No',
    modsRange: 'No recomendado',
    both: 'No',
    bothRange: 'No recomendado'
  },
  {
    type: 'Lapis',
    ram: '8GB RAM',
    img: '/images/tienda/minecraft/plan/Lapis.webp',
    price: '11,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Premium/Lapis-Premium',
    vanilla: '24-45 jugadores',
    plugins: 'Sí',
    pluginsRange: '16-30 jugadores',
    mods: 'Sí',
    modsRange: '3-8 jugadores (modpacks ligeros)',
    both: 'Sí',
    bothRange: '2-4 jugadores (pack ligero y plugins básicos)'
  },
  {
    type: 'Emerald',
    ram: '12GB RAM',
    img: '/images/tienda/minecraft/plan/Emerald.webp',
    price: '17,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Premium/Emerald-Premium',
    vanilla: '40-70 jugadores',
    plugins: 'Sí',
    pluginsRange: '30-50 jugadores',
    mods: 'Sí',
    modsRange: '8-15 jugadores (modpacks medianos)',
    both: 'Sí',
    bothRange: '4-8 jugadores (modpack medio + plugins básicos)'
  },
  {
    type: 'Diamond',
    ram: '16GB RAM',
    img: '/images/tienda/minecraft/plan/Diamond.webp',
    price: '23,99€ /mes',
    url: 'https://billing.vhost.tech/products/Plan-Premium/Diamond-Premium',
    vanilla: '60-90 jugadores',
    plugins: 'Sí',
    pluginsRange: '50-70 jugadores',
