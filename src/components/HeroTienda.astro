---
export interface Props {
  titulo?: string;
  descripcion?: string;
  imagenFondo?: string; // Ruta de la imagen de fondo
  cta?: string;         // Texto opcional para un CTA
  ctaLink?: string;     // Link opcional para un CTA
}
const {
  titulo = "Minecraft Hosting",
  descripcion = "",
  imagenFondo = "/images/aquatic.png",
  cta,
  ctaLink,
} = Astro.props as Props;
---

<section class="relative bg-cover bg-right overflow-hidden" style={`background-image: url('${imagenFondo}');`}>
  <!-- Fondo semitransparente -->
  <div class="absolute inset-0 bg-black/70"></div>
  <!-- Gradiente -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: linear-gradient(
      to right,
      rgba(0,0,0,0.9) 0%,
      rgba(0,0,0,0.8) 40%,
      rgba(0,0,0,0.4) 70%,
      rgba(0,0,0,0) 100%
    );"
  ></div>

  <div class="relative container mx-auto px-6 py-28 text-white flex flex-col md:flex-row md:items-center md:justify-between">
    <div class="text-center md:text-left mb-10 md:mb-0 max-w-xl">
      <p class="uppercase text-secondary font-poppins mb-2">Adquiere ahora</p>
      <h1 class="text-5xl md:text-6xl font-poppins font-bold mb-6">{titulo}</h1>
      {descripcion && <p class="text-lg font-poppins text-gray-200 mb-6">{descripcion}</p>}
      {cta && ctaLink && (
        <a 
          href={ctaLink} 
          class="inline-block mt-2 px-8 py-3 rounded-full bg-secondary text-white font-poppins font-semibold text-lg shadow hover:bg-[#ffb000] transition-colors"
        >
          {cta}
        </a>
      )}
    </div>
  </div>
</section>
