---
import MainLayout from '../../layouts/MainLayout.astro';
import "../../styles/global.css";
import HeroTienda from '../../components/HeroTienda.astro';
import FAQSection from '../../components/FAQSection.astro';
import DedicatedSection from '../../components/DedicatedSection.astro';
import Card from '../../components/tienda/card.astro';
import CaracteristicasInicio from '../../components/CaracteristicasInicio.astro';


const gta5Plans = [
  {
    type: "Plan Starter",
    ram: "8GB RAM",
    img: "/images/tienda/gta/plan/car.webp",
    price: "19,99€ /mes",
    url: "https://billing.vhost.tech/products/Fivem/starter",
    info: "Recomendado para 32-50 jugadores (vanilla o pocos scripts). Perfecto para servidores básicos o pruebas.",
  },
  {
    type: "Plan Medium",
    ram: "16GB RAM",
    img: "/images/tienda/gta/plan/ship.webp",
    price: "39,99€ /mes",
    url: "https://billing.vhost.tech/products/Fivem/medium",
    info: "Ideal para 64-128 jugadores con varios scripts, recursos y mapas personalizados.",
  },
  {
    type: "Plan Pro",
    ram: "32GB RAM",
    img: "/images/tienda/gta/plan/heli.webp",
    price: "79,99€ /mes",
    url: "https://billing.vhost.tech/products/Fivem/pro",
    info: "Hasta 128-150 jugadores si tienes CPU potente y scripts optimizados. Consultar si necesitas más slots.",
  },
];



const gta5Features = [
  { icon: 'fas fa-user-friends mr-2.5', text: '<strong>Slots</strong> Ilimitados' },
  { icon: 'fas fa-hdd mr-3.5', text: '<strong>60 GB</strong> de disco SSD' },
  { icon: 'fas fa-shield-alt mr-3.5', text: 'Protección <strong>Anti-DDoS</strong>' },
  { icon: 'fas fa-microchip mr-3.5', text: '<strong>Intel i7-9700K</strong>' },
];

const faqs = [
  { question: '¿Qué métodos de pago aceptan?', answer: 'Aceptamos tarjetas de crédito, PayPal y Bizum.' },
  { question: '¿Cuánto tarda en estar disponible mi servidor de GTA 5?', answer: 'La instalación es instantánea tras el pago. Recibirás los datos de acceso al momento.' },
  { question: '¿Por qué debería elegir Vhost para mi servidor de GTA 5?', answer: 'Ofrecemos hardware premium, soporte técnico 24/7 y una infraestructura optimizada para servidores de GTA 5/FiveM.' },
  { question: '¿Puedo instalar mods, scripts o recursos personalizados en mi servidor de GTA 5?', answer: 'Sí, tienes acceso completo vía FTP para instalar mods, scripts y personalizar tu servidor a tu gusto.' },
  { question: '¿Cuántos jugadores soportan los servidores?', answer: 'Depende del plan que elijas, pero puedes escalar el número de slots según tus necesidades.' },
  { question: '¿Puedo subir mi propio paquete de servidor o base?', answer: 'Claro, puedes subir tu pack o base directamente desde el panel de control.' },
  { question: 'Estoy en otro hosting, ¿puedo migrar mi servidor a Vhost?', answer: 'Sí, ofrecemos migración gratuita desde otros proveedores para que no pierdas tu progreso ni configuraciones.' },
  { question: '¿Qué plan de servidor GTA 5 es el más adecuado para mí?', answer: 'Depende del número de jugadores, mods y scripts que planees usar. Consulta las características de cada plan o contáctanos para asesoría personalizada.' },
  { question: '¿Qué garantía de disponibilidad ofrecen?', answer: 'Garantizamos un 99.9% de uptime, con monitoreo 24/7 y protección avanzada contra ataques DDoS.' },
