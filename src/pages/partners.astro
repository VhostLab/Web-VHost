---
// src/pages/partners.astro
import MainLayout from '../layouts/MainLayout.astro';
import PartnersCard from '../components/PartnersCard.astro';
import ClubLogo from '../components/ClubLogo.astro';
import "../styles/global.css";
import el_jjota from '../images/el_jjota.jpg';
import joselyto from '../images/joselyto.jpg';
import community3k from '../images/3k.jpg';


const creators = [
  {
    name: 'el_jjota', role: 'Streamer', imageSrc: el_jjota.src,
    twitchUrl: 'https://www.twitch.tv/el_jjota',
    twitterUrl: 'https://x.com/el_jjota',
    youtubeUrl: 'https://www.youtube.com/@el_jjota',
    tiktokUrl: 'https://www.tiktok.com/@el_jjota',
    instagramUrl: 'https://www.instagram.com/el_jjota/'
  },
  {
    name: 'Joselyto', role: 'Streamer', imageSrc: joselyto.src,
    twitchUrl: 'https://www.twitch.tv/Joselyto',
    twitterUrl: 'https://x.com/JoselytoOG',
    youtubeUrl: 'https://www.youtube.com/@joselyto',
    tiktokUrl: 'https://www.tiktok.com/@joselytoog',
    instagramUrl: 'https://www.instagram.com/joselyto.tv/'
  }
];

const communities = [
  {
    name: '3K COMMUNITY', type: 'Comunidad', imageSrc: community3k.src,
    twitterUrl: 'https://x.com/community3000',
    youtubeUrl: 'https://www.youtube.com/@community-3000'
  }
];

export const clubs = [
  {
    name: "Club Esports Sur",
    imageSrc: "/images/clubs/vhostlogo.png",
    alt: "Logo Club Esports Sur",
    url: "https://vhost.tech"
  },
  {
    name: "Gamers Unidos",
    imageSrc: "/images/clubs/vhostlogo.png",
    alt: "Logo Gamers Unidos",
    url: "https://vhost.tech"
  },
  {
    name: "Vhost",
    imageSrc: "/images/clubs/vhostlogo.png",
    alt: "Vhost Logo",
    url: "https://vhost.tech"
  },
  
];



---

<MainLayout 
  title="Partners"
  description="Descubre nuestros creadores de contenido, comunidades colaboradoras y clubes asociados. Conoce a los partners que forman parte de la familia Vhost."
  image="https://vhost.tech/SEO/vhost-preview.png"
  url="https://vhost.tech/partners"
>
  <!-- Sección: Creadores de Contenido -->
  <section class="slide-up py-20" style="background-color: #0b0b0b;">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-2">Creadores de Contenido</h2>
      <div class="border-t-2 border-secondary w-16 mx-auto mb-6"></div>
      <p class="text-gray-400 mb-12 max-w-xl mx-auto">
        Descubre a nuestros streamers oficiales y síguelos en sus redes para no perderte ninguna transmisión.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        {creators.map(c => (
          <PartnersCard
            name={c.name}
            role={c.role}
            imageSrc={c.imageSrc}
            twitchUrl={c.twitchUrl}
            twitterUrl={c.twitterUrl}
            youtubeUrl={c.youtubeUrl}
            tiktokUrl={c.tiktokUrl}
            instagramUrl={c.instagramUrl}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Sección: Comunidades -->
  <section class="slide-up py-20" style="background-color: #101010;">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold mb-2" style="color: #ffffff;">Comunidades</h2>
      <div class="border-t-2 w-16 mx-auto mb-6" style="border-color: #fc7c04;"></div>
      <p class="mb-12 max-w-xl mx-auto text-gray-400">
        Conoce las comunidades que colaboran estrechamente con nosotros.
      </p> 
      <div class="flex flex-wrap justify-center gap-4">
        {communities.map(c => (
          <PartnersCard
            name={c.name}
            role={c.type}
            imageSrc={c.imageSrc}
            twitterUrl={c.twitterUrl}
            youtubeUrl={c.youtubeUrl}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Sección: Clubs -->
<!-- Donde muestras los logos -->
<section class="slide-up py-20" style="background-color: #0b0b0b;">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold mb-2 text-white">Clubs</h2>
    <div class="border-t-2 border-secondary w-16 mx-auto mb-6"></div>
    <p class="text-gray-400 mb-12 max-w-xl mx-auto">
      Descubre los clubes asociados que forman parte de la familia Vhost.
    </p>
    <div class="flex flex-wrap justify-center items-center gap-4">
      {clubs.map(c => (
        <div class="w-32 h-40 flex items-center justify-center">
          <ClubLogo
            imageSrc={c.imageSrc}
            alt={c.alt}
            url={c.url}
          />
        </div>
      ))}
    </div>
  </div>
</section>



</MainLayout>
