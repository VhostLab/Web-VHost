---
import MainLayout from '@layouts/MainLayout.astro';
import "@/styles/global.css";
const title = "Página no encontrada";
const description = "La página que buscas no existe o ha sido movida.";
---
<MainLayout title="Error">
  <section class="min-h-screen flex items-center justify-center bg-primary">
    <div class="flex flex-col items-center justify-center w-full max-w-md px-6 py-12 bg-white/5 rounded-2xl shadow-lg">
      
      <h1 class="text-7xl font-bold text-secondary mb-2 font-poppins">404</h1>
      <h2 class="text-2xl font-semibold text-secondary mb-4 font-poppins text-center">Página no encontrada</h2>
      <p class="text-gray-300 mb-8 text-center">{description}</p>
      <a
        href="/"
        class="inline-block bg-secondary hover:opacity-80 text-black font-semibold py-3 px-8 rounded-lg transition-all duration-150"
      >
        Volver al inicio
      </a>

    </div>
  </section>
</MainLayout>


